
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // BharatConnect User Profiles
    match /bharatConnectUsers/{userId} {
      allow create: if request.auth.uid == userId;
      allow read: if true; // WARNING: Publicly readable for now. Change to `if request.auth != null;` for production.
      allow update: if request.auth.uid == userId;
      allow delete: if request.auth.uid == userId;

      // Chat Requests - Sent
      match /requestsSent/{receiverIdInPath} {
        allow read: if request.auth.uid == userId;
        allow create: if request.auth.uid == userId && request.resource.data.to == receiverIdInPath;
        allow update: if request.auth.uid == userId; // e.g., if sender could update a message in the request (not typical)
        allow delete: if request.auth.uid == userId; // Sender can delete their sent request
      }

      // Chat Requests - Received
      match /requestsReceived/{senderIdInPath} {
        allow read: if request.auth.uid == userId;
        allow create: if request.auth.uid == senderIdInPath && request.resource.data.from == request.auth.uid; // Sender creates
        allow update: if request.auth.uid == userId; // Receiver updates (e.g. status to accepted/rejected)
        allow delete: if request.auth.uid == userId || request.auth.uid == senderIdInPath; // Receiver or original Sender can delete
      }
    }
  }
}
