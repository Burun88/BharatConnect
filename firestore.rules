rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // bharatConnectUsers: Main profile data for the BharatConnect app.
    match /bharatConnectUsers/{userId} {
      // Allow a user to read their own profile.
      allow read: if request.auth != null && request.auth.uid == userId;

      // !!! EXTREMELY INSECURE - FOR DEBUGGING ONLY !!!
      // Temporarily allow anyone to create documents in this collection.
      // This helps determine if the issue is with auth context in rules or a more fundamental write block.
      allow create: if true;
      // !!! REVERT THIS TO A SECURE RULE IMMEDIATELY AFTER TESTING: !!!
      // allow create: if request.auth != null && request.auth.uid == userId;


      // Allow a user to update their own profile.
      // This is a simplified rule for debugging.
      allow update: if request.auth != null && request.auth.uid == userId;

      // Disallow deletes by default unless explicitly needed.
      allow delete: if false;
    }

    // Add rules for other collections here if needed for bharatconnect-i8510
  }
}
