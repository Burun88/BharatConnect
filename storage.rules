
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for user profile images
    match /profileImages/{userId}/{fileName} {
      // Anyone can read any profile image
      allow read: if true;

      // Only the authenticated user can upload their own profile image.
      // NOTE: Temporarily removed size and content-type checks for debugging CORS.
      allow create: if request.auth != null && request.auth.uid == userId;

      // Only the user can update or delete their own profile image.
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
