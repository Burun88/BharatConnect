
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for profile images
    match /profileImages/{userId}/{fileName} {
      // Allow public read access for anyone.
      // This is necessary for the browser's preflight OPTIONS request to succeed.
      // The URLs are unguessable, so this is safe.
      allow read;

      // Allow write (create, update, delete) only if the user is authenticated
      // and their UID matches the {userId} in the path.
      // This ensures users can only write to their own profile image folder.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
