
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Files are public by default.
    // If you need to restrict access, change this rule.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own profileImages folder.
    // This rule is for potential client-side uploads.
    // Server-side uploads with the Admin SDK will bypass these rules.
    match /profileImages/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
