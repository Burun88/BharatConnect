
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for user profile images
    match /profileImages/{userId}/{fileName} {
      // Anyone can read profile images (necessary for display in the app)
      allow read;
      
      // Only the authenticated user can upload or delete their own profile image
      // We also enforce that it's an image and under 5MB.
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    // You can add rules for other paths here, for example, chat media:
    // match /chatMedia/{chatId}/{mediaId} {
    //   ...
    // }
  }
}
