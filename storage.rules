rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to profile images so they can be displayed in the app.
    // Restrict write access to only the authenticated user for their own directory.
    match /profileImages/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
