
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Media chunks for chats
    // Allow read/write only by participants of the chat.
    match /mediaChunks/{chatId}/{fileId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }

    // Profile images
    // Allow anyone to read profile images.
    // Allow authenticated users to write only to their own profile image path.
    match /profileImages/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
