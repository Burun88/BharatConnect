
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
      
      // Allow any authenticated user to write.
      // This is a temporary, less secure rule for debugging the CORS issue.
      allow write: if request.auth != null;
    }
  }
}
