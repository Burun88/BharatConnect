
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile images can be read by anyone, but only written by the owner.
    match /profileImages/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Media chunks can only be read or written by users who are participants in the corresponding chat.
    // This rule is more robust by relying solely on the get() function, which implicitly checks for existence.
    match /mediaChunks/{chatId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }
  }
}
