rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile images can be read by anyone, but only the authenticated user can write to their own path.
    match /profileImages/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // You can add rules for other paths here, for example, chat media:
    // match /chatMedia/{chatId}/{messageId}/{fileName} {
    //   allow read, write: if request.auth != null && isParticipant(chatId);
    // }
  }
}
